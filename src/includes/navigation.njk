<nav class="nav js-nav" role="navigation" tabindex="-1">

    {# Menu Toggle Button #}
    <button
        class="nav__toggle js-nav-toggle"
        aria-expanded="false"
        aria-controls="nav-menu"
    >
        <span class="sr-only">toggle menu</span>
        <span class="menuicon">
            <span class="menuicon__bar"></span>
            <span class="menuicon__bar"></span>
            <span class="menuicon__bar"></span>
            <span class="menuicon__bar"></span>
        </span>
    </button>

    {# Nav Links #}
    <ul class="nav__menu js-nav-menu u-align-center" id="nav-menu">
    {%- for item in collections.all | eleventyNavigation -%}
        {%- set isCurrent = (item.url == page.url) -%}
        {%- set isParent = item.url != '/' and item.url in page.url -%}
        <li class="nav__item{% if isCurrent or isParent %} nav__item--active{% endif %}">
            <a
                class="nav__link"
                href="{% if isCurrent %}#main{% else %}{{ item.url | url }}{% endif %}"
                aria-label="{{ item.title }}"
                {% if isCurrent %}aria-current="page"{% endif %}
            >
                {{ item.title }}
            </a>
        </li>
    {%- endfor -%}
        <li class="nav__item"><a class="nav__link nav__link--button" href="https://github.com/kv96/uxwiki/issues/new?template=suggest-a-term.md&title=Term+Suggestion%21" target="_blank" rel="noopener" aria-label="Suggest a Term">Suggest a Term</a></li>
    </ul>

</nav>
